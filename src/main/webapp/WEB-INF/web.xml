<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>com.csp.expense.filter.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/dash/*</url-pattern>
    </filter-mapping>
    
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>com.csp.expense.web.auth.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <servlet-class>com.csp.expense.web.auth.RegisterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>com.csp.expense.web.auth.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DashController</servlet-name>
        <servlet-class>com.csp.expense.web.DashController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CategoryController</servlet-name>
        <servlet-class>com.csp.expense.web.CategoryController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExpenseController</servlet-name>
        <servlet-class>com.csp.expense.web.ExpenseController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExpenseFormController</servlet-name>
        <servlet-class>com.csp.expense.web.ExpenseFormController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DashController</servlet-name>
        <url-pattern>/dash</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CategoryController</servlet-name>
        <url-pattern>/dash/categories</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExpenseController</servlet-name>
        <url-pattern>/dash/expenses</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExpenseFormController</servlet-name>
        <url-pattern>/dash/expenses/form</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
